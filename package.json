{
  "name": "mediacloudmanager",
  "version": "1.0.0",
  "exports": "./src/index.js",
  "engines": {
    "node": "20"
  },
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "compile": "npx tsc",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "sql:dist": "node --import ./loader.mjs src/app/config/sqlFilesToDist.config.ts",
    "clean:scripts": "rimraf dist/app/database/scripts",
    "copy:folders": "cpx \"public/**/*\" dist/public && cpx \"src/assets/**/*\" dist/assets",
    "build": "npm run compile && npm run sql:dist && npm run clean:scripts && npm run copy:folders",
    "start": "cross-env NODE_ENV=production npm run build && node dist/index.js",
    "watch:ts": "npx tsx watch src/index.ts",
    "json-server": "json-server --watch db.json --port 3000"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mssql": "^9.1.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.0",
    "cpx": "^1.5.0",
    "fs-extra": "^11.3.0",
    "json-server": "^1.0.0-beta.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "file-type": "^20.0.0",
    "mssql": "^11.0.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.0.3"
  }
}
